# Production Environment Variables Template
# Copy this to Vercel Environment Variables (do NOT commit with real values)

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://ratemyaccom.com.au
NEXT_PUBLIC_APP_NAME="Rate My Accom NSW"

# Database - PostgreSQL (Use Vercel Postgres or external service)
DATABASE_URL=postgresql://user:password@host:5432/ratemyaccom_production
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20
DATABASE_SSL=true

# Authentication - NextAuth.js
# Generate NEXTAUTH_SECRET with: openssl rand -base64 32
NEXTAUTH_URL=https://ratemyaccom.com.au
NEXTAUTH_SECRET=REPLACE_WITH_GENERATED_SECRET

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Service - SendGrid
EMAIL_SERVER_HOST=smtp.sendgrid.net
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=apikey
EMAIL_SERVER_PASSWORD=SG.your-sendgrid-api-key
EMAIL_FROM=noreply@ratemyaccom.com.au

# File Upload - AWS S3
AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=ratemyaccom-prod-uploads

# Maps & Location
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Rate Limiting (Production values)
RATE_LIMIT_MAX_REQUESTS=200
RATE_LIMIT_WINDOW_MS=900000

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=auto

# Monitoring - Sentry
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-org
SENTRY_PROJECT=ratemyaccom

# Feature Flags
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_USER_REGISTRATION=true
NEXT_PUBLIC_MAINTENANCE_MODE=false

# Security
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Redis (Optional - for advanced caching)
REDIS_URL=redis://default:password@host:6379
