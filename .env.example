# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Security
CSRF_SECRET=your-csrf-secret-here-change-in-production
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3000

# Database (configure based on your database choice)
DATABASE_URL=postgresql://user:password@localhost:5432/ratemyaccom
DATABASE_SSL=false

# Authentication
NEXTAUTH_SECRET=your-nextauth-secret-here-change-in-production
NEXTAUTH_URL=http://localhost:3000

# Email Service (configure based on your email provider)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@ratemyaccom.com.au

# File Upload
UPLOAD_MAX_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Rate Limiting (optional - for Redis-based rate limiting)
REDIS_URL=redis://localhost:6379

# External Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Monitoring & Analytics (optional)
# SENTRY_DSN=your-sentry-dsn
# GOOGLE_ANALYTICS_ID=your-ga-id

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_REVIEW_SUBMISSION=true
ENABLE_EMAIL_VERIFICATION=true
